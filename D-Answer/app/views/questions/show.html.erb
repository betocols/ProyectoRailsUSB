<div>
  <div style="border-bottom:1px solid #2a638f">
    <div class="title" style="border-bottom:none"> <%= @question.title %> </div>
    <div style="float:right;margin-top:10px;margin-right:30px;">
      <%= link_to 'Editar', edit_question_path(@question), :class => 'boton' %>
      <%= link_to 'Volver', questions_path, :class => 'boton' %>
    </div>
  </div>
  <div sytle="text-align:center;margin-top:3px;font-size:x-small;">
    <%= @question.created_at.day %>/<%= @question.created_at.month %>/<%= @question.created_at.year %>
    &nbsp  &nbsp
    <%= @question.created_at.strftime("%I:%M%p") %>
  </div>
  <table id="table_question">
    <tr>
      <td>
        <b> Categor√≠a: </b>
      </td>
      <td>  
        <%= @question.category %>
      </td>
    </tr>
    <tr>
      <td style="vertical-align: top;">
        <b> Pregunta: </b>
      </td>
      <td style="text-align:justify;">  
        <%= @question.content %>
      </td>
    </tr>
  </table>

  <div style="border">
    <div style="font-size:small;margin-left:120px">
      <h2>Comentarios </h2>
      <% @question.comment_qs.each do |c| %>
        <% if c.content %>
          <li>
            <p>
              <%= c.content %>
              <%= link_to 'Destroy', [@question, c], method: :delete, :class => 'boton', data: { confirm: 'Are you sure?'}%>
            </p>
          </li>
        <% end %>
      <% end %>

      <%= form_for [@question, @question.comment_qs.build] do |f| %>
        <div class="field">
          <%= f.text_area :content, :cols => 70, :rows => 5, :placeholder => "Agrega un comentario." %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>


  <h2>Respuestas </h2>
  <div>
    <% @question.answers.each do |c| %>
      <% if c.content %>
        <p><li><p>
          <%= c.content %>
          <%= link_to 'Destroy', [@question, c], method: :delete, :class => 'boton', data: { confirm: 'Are you sure?'}%>
            <%= link_to 'Comentar', new_question_answer_comment_as_path(@question, c), :class => 'boton' %>
        </p>
      <% end %>
    </li>
    <% end %>

    <%= form_for [@question, @question.answers.build] do |f| %>
      <div class="field">
        <%= f.text_area :content, :cols => 70, :rows => 5, :placeholder => "Responde la pregunta." %>

      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>