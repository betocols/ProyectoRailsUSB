<%= semantic_form_for @question do |f| %>
  <table class="create_question">
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
    <tr>
      <td>
        <spam style="margin-left:10px">
          <b> TÍTULO </b>
        </spam>
        <%= f.input :title, :label => false, :input_html => { :size => 60 } %>
      </td>
    </tr>  

    <tr>
      <td>
        <spam style="margin-left:10px">
          <b> CATEGORÍAS (separadas por coma)</b>
        </spam>
        <%= f.input :tag_list, :label => false, :input_html => { :size => 60 } %>
      <td>
    </tr>  

    <tr>
      <td>
        <spam style="margin-left:10px">
          <b> CONTENIDO </b>
        </spam>
        <%= f.input :content, :as => :text, :label => false, :input_html => { :rows => 20, :cols => 120 } %>
      </td>
     <tr>
      <td>        
        <%= f.input :score, :as => :hidden, :value => "0" %></div>
      </td>
    </tr>
  </table>
  
  <div class="actions", style="text-align: right;margin-top:20px;margin-right:75px">
    <%= f.submit "Actualizar Pregunta"%>
  </div>  
<% end %>
