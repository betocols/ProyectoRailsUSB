    <b>Usuario:</b> 
    <div class="title" style="margin-left:10px;border-bottom:none">
      <%= @user.login %>
    </div>
  </div>
  <div style="margin-left:10px;margin-top:15px;float:left">
    <%= link_to 'Editar', edit_user_path(@user), :class => 'boton'%>
