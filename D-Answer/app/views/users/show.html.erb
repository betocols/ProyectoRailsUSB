  </div>
</div>


<table id="show_user">
  <tr>
    <td>
      <b> Nombre: </b>  
      <%= @user.name %>
    </td>
    <td>
      <b> Apellido: </b>
      <%= @user.lastname %>
    </td>
  </tr>
  <tr>
    <td >
      <b> Email: </b>  
      <%= @user.email %>
    </td>
    <td>
      <b> Score: </b>
      <%= @user.score %>
    </td>
  </tr>
  </tr>
</table>